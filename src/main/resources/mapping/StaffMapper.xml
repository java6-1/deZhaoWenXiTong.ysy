<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.accp.dao.StaffMapper" >
 
  
   <!--查询技工星级-->
  <select id="selecBybzj" resultType="com.accp.pojo.Staff" 	parameterType="com.accp.pojo.Xj">
  	SELECT * FROM `staff` INNER JOIN `xj` ON `staff`.`xjId` = `xj`.`xjId` WHERE `staff`.`staffName` = #{staffname}
  </select> 
  
  <!--   查询班组技工 -->
  <select id="selecBybzjg" resultType="com.accp.pojo.Staff">
  	SELECT * FROM `staff` WHERE  `bzId` IS NOT NULL
  </select>
  
  <!--查询全部人员 -->
  <select id="selec" resultType="com.accp.pojo.Staff">
  	SELECT *FROM `staff` WHERE 1=1 
  	 <if test="staffname != null and staffname != ''" >
          	AND `staffName` = #{staffname}
     </if>
  </select>
  <!-- 密码验证登录 -->
  <select id="selectuser" resultType="com.accp.pojo.Staff">
  	SELECT *FROM `staff` WHERE `staffAccount`=#{staffAccount} AND `staffPawss`=#{staffPawss}
  </select>
  <!-- 电话验证登录 -->
  <select id="selectuserPhone" resultType="com.accp.pojo.Staff">
  SELECT *FROM `staff` WHERE staff=#{staff}
  </select>
  
 
  
 
 
  
</mapper>